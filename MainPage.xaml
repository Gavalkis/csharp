<Page x:Class="masterAndFloorApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:masterAndFloorApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnRealisationHistory" Content="История реализации" Width="150" Click="BtnRealisationHistory_Click" ></Button>
        <Button x:Name="BtnPartners" Grid.Column="1" Content="Партнеры" Click="BtnPartners_Click"></Button>
        <Button x:Name="BtnCalculator" Grid.Column="2" Content="Расчитать" Click="BtnCalculator_Click"></Button>
    </Grid>
</Page>
